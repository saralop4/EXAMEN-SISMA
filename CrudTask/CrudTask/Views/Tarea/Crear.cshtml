@model Tarea
@{
    ViewData["Title"] = "Crear";

}
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Crear Tarea</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <form id="miForm" method="post" asp-action="Crear">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="Task" class="col-sm-2 col-form-label">Tarea</label>
                        <div class="col-sm-10">
                            <input asp-for="Task" type="text" class="form-control" id="inputEmail3" placeholder="Digite su tarea" required autocomplete="off">
                            <span asp-validation-for="Task" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2">Estado</div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Status" type="checkbox" id="gridCheck1" autocomplete="off">
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <label class="form-check-label">
                                    Completada
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10" style="display:flex;">

                            <input id="btnCrear" type="submit" value="Nueva Tarea" class="btn btn-outline-info">

                            <a style="text-align:end;margin:10px;" asp-action="Regresar"> Back List</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>

    @section scripts{
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            // Agrega un manejador de envío al formulario
            document.getElementById('miForm').addEventListener('submit', function (e) {
                e.preventDefault(); // Evita que se envíe el formulario directamente

                Swal.fire({
                    title: '¿Estás seguro?',
                    text: '¿Deseas crear esta nueva tarea?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Envía el formulario si se confirma el SweetAlert
                        document.getElementById('miForm').submit();



                    }
                });

            });

        </script>

        @if (TempData["SuccessMessage"] != null)
        {

            TempData["SuccessMessage"] = null;
            <script>
                Swal.fire({
                    icon: 'success',
                    title: 'su tarea ha sido agregada exitosamente',

                });
            </script>
        }


    }
</body>