@model Tarea
@{
    ViewData["Title"] = "Editar";
}


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Editar Tarea</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <form method="post" asp-action="Editar">

                    <input type="hidden" asp_for="Id" />

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Task" class="col-sm-2 col-form-label">Tarea</label>
                        <div class="col-sm-10">
                            <input asp-for="Task" type="text" class="form-control" id="inputEmail3" placeholder="Digite su tarea" required>
                            <span asp-validation-for="Task" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2">Estado</div>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Status" type="checkbox" id="gridCheck1">
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <label class="form-check-label">
                                    Completada
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="submit" value="Guardar" class="btn btn-outline-info">
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>


    @section scripts{
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // Agrega un manejador de envío al formulario
            document.getElementById('miForm').addEventListener('submit', function (e) {
                e.preventDefault(); // Evita que se envíe el formulario directamente

                Swal.fire({
                    title: 'Editado Correctamente',
                    width: 600,
                    padding: '3em',
                    color: '#716add',
                    background: '#fff url(/images/trees.png)',
                    backdrop: `
                    rgba(0,0,123,0.4)
                    url("/images/nyan-cat.gif")
                    left top
                    no-repeat
                  `
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Envía el formulario si se confirma el SweetAlert
                        document.getElementById('miForm').submit();
                       
                    }
                });

            });

        </script>
    }
</body>



